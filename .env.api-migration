# Конфигурация для миграции API routes
# Скопируйте нужные переменные в ваш .env.local файл

# Версия API (оставьте пустым для удаления версионирования)
NEXT_PUBLIC_API_VERSION=

# Режим совместимости (поддержка старых путей)
NEXT_PUBLIC_API_COMPATIBILITY=false

# Автоматические редиректы со старых путей на новые
NEXT_PUBLIC_API_AUTO_REDIRECT=true

# Примеры конфигурации для разных этапов миграции:

# ЭТАП 1: Подготовка (тестирование новых путей параллельно со старыми)
# NEXT_PUBLIC_API_VERSION=v1
# NEXT_PUBLIC_API_COMPATIBILITY=true
# NEXT_PUBLIC_API_AUTO_REDIRECT=false

# ЭТАП 2: Переходный период (новые пути по умолчанию, редиректы со старых)
# NEXT_PUBLIC_API_VERSION=
# NEXT_PUBLIC_API_COMPATIBILITY=false
# NEXT_PUBLIC_API_AUTO_REDIRECT=true

# ЭТАП 3: Финальный (только новые пути, без поддержки старых)
# NEXT_PUBLIC_API_VERSION=
# NEXT_PUBLIC_API_COMPATIBILITY=false
# NEXT_PUBLIC_API_AUTO_REDIRECT=false
